@page "/"

<!-- Notices -->
<ContainerFull>
    <GridRow AddOn="border rounded">
        <GridCol Main="col-12" AddOn="bg-info p-3">
            <span class="text-light">Sorry. Im still developing site feel free to contact by email, Thanks.</span>
        </GridCol>
    </GridRow>
</ContainerFull>

<!-- Hero -->
<ContainerFull>
    <GridRow SetHeight="true" Height="25" AddOn="border rounded" UrlImage="@heroUrl">
        <GridCol Main="col-12" VerticalMiddle="true">
            <h1>Welcome to Tooensure!</h1>
        </GridCol>
    </GridRow>
</ContainerFull>

<!-- Service Bar1 -->
<ContainerFull>
    <GridRow SetHeight="true" Height="15" UrlImage="@barUrl1" AddOn="border rounded">
        <GridCol Main="col-6" VerticalMiddle="true">        
